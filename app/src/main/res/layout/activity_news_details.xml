<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zaher.base.presentation.newsdetails.NewsDetailsActivity">

    <TextView
            android:text="@string/main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"/>
    <TextView
            android:text="By Author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_author" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_header" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_header"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_desc"
            app:layout_constraintStart_toStartOf="@+id/tv_author" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_author" app:layout_constraintEnd_toEndOf="@+id/tv_author"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_source_url"
            app:layout_constraintStart_toStartOf="@+id/tv_desc" app:layout_constraintEnd_toEndOf="@+id/tv_desc"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tv_desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>
